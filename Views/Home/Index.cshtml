@{
    ViewData["Title"] = "Trang chủ";
}
<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="display-6 fw-bold">Quản lý Dãy Nhà Trọ</h1>
      <p class="text-muted mb-0">Bảng điều khiển nhanh – truy cập các chức năng thường dùng</p>
    </div>

    <div class="row g-4">
      <div class="col-12 col-sm-6 col-lg-4">
        <a class="dash-card d-block" 
            asp-controller="Rooms"
            asp-action="Index">
          <div class="dash-icon"><i class="bi bi-door-open"></i></div>
          <div class="dash-title">Phòng</div>
          <div class="dash-desc">Danh sách phòng, thêm phòng mới, giá thuê & diện tích.</div>
        </a>
      </div>

      <div class="col-12 col-sm-6 col-lg-4">
          <a class="dash-card d-block text-decoration-none" 
            asp-controller="Tenants" 
            asp-action="Index">
              <div class="dash-icon"><i class="bi bi-people"></i></div>
              <div class="dash-title">Người thuê</div>
              <div class="dash-desc">Quản lý khách thuê.</div>
          </a>
      </div>

      <div class="col-12 col-sm-6 col-lg-4">
        <a class="dash-card  d-block"
            asp-controller="Contracts"
            asp-action="Index">
          <div class="dash-icon"><i class="bi bi-file-earmark-text"></i></div>
          <div class="dash-title">Hợp đồng</div>
          <div class="dash-desc">Tạo & theo dõi hợp đồng (sẽ thêm sau).</div>
        </a>
      </div>

      <div class="col-12 col-sm-6 col-lg-4">
        <a class="dash-card  d-block" 
            asp-controller="Payments"
            asp-action="Index">
          <div class="dash-icon"><i class="bi bi-receipt"></i></div>
          <div class="dash-title">Hóa đơn</div>
          <div class="dash-desc">Lập & thanh toán hóa đơn (sẽ thêm sau).</div>
        </a>
      </div>

      <div class="col-12 col-sm-6 col-lg-4">
                <a class="dash-card  d-block"
                   asp-controller="Report"
                   asp-action="Index">
          <div class="dash-icon"><i class="bi bi-bar-chart"></i></div>
          <div class="dash-title">Báo cáo</div>
          <div class="dash-desc">Doanh thu, công nợ (sẽ thêm sau).</div>
        </a>
      </div>

      <div class="col-12 col-sm-6 col-lg-4">
        <a class="dash-card  d-block" href="#">
          <div class="dash-icon"><i class="bi bi-gear"></i></div>
          <div class="dash-title">Cài đặt</div>
          <div class="dash-desc">Cấu hình hệ thống (sẽ thêm sau).</div>
        </a>
      </div>
    </div>
  </div>
</section>
