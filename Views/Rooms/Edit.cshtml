@model BoardingHouseApp.Models.Room
@{
    ViewData["Title"] = "Sửa phòng";
}
<div class="container py-4">
    <h2>Sửa phòng</h2>

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="RoomId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label">Số phòng</label>
            <input asp-for="RoomNumber" class="form-control" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giá thuê</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
