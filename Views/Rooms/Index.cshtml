@model IEnumerable<BoardingHouseApp.Models.Room>

@{
    ViewData["Title"] = "Danh sách phòng";
}

<h2>Danh sách phòng</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm phòng mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã phòng</th>
            <th>Số phòng</th>
            <th>Giá</th>
            <th>Tình trạng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomId</td>
                <td>@item.RoomNumber</td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                @* <td>@(item. ? "Trống" : "Đã thuê")</td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
