@model IEnumerable<BoardingHouseApp.Models.Room>
@{
    ViewData["Title"] = "Danh sách phòng";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Phòng trọ</h2>
        
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm phòng</a>
        }
        else
        {
            <a href="#" class="btn btn-primary" id="fakeCreateButton"><i class="bi bi-plus-lg"></i> Thêm phòng</a>
        }
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Số phòng</th>
                <th>Giá thuê</th>
                <th>Ngày tạo</th>
                <th>Ngày cập nhật</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.RoomId</td>
                <td>@r.RoomNumber</td>
                <td>@r.Price.ToString("N0") đ</td>
                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@r.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@r.RoomId" class="btn btn-sm btn-outline-secondary">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@r.RoomId" class="btn btn-sm btn-outline-danger ms-1">Xóa</a>
                    }
                    else
                    {
                        <a href="#" class="btn btn-sm btn-outline-secondary fakeActionButton">Sửa</a>
                        <a href="#" class="btn btn-sm btn-outline-danger ms-1 fakeActionButton">Xóa</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Thông báo -->
<div id="notification" style="display: none; position: fixed; top: 20px; right: 20px; z-index: 1050;" class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Thông báo:</strong> Bạn không có quyền thực hiện chức năng này.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fakeCreateButton = document.getElementById('fakeCreateButton');
            if (fakeCreateButton) {
                fakeCreateButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    showNotification();
                });
            }
            const fakeActionButtons = document.querySelectorAll('.fakeActionButton');
            fakeActionButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    showNotification();
                });
            });

            function showNotification() {
                const notification = document.getElementById('notification');
                notification.style.display = 'block';
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 5000);
            }
        });
    </script>
}