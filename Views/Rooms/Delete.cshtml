@model BoardingHouseApp.Models.Room
@{
    ViewData["Title"] = "Xóa phòng";
}
<div class="container py-4">
    <h2>Xóa phòng</h2>
    <div class="alert alert-warning mt-3">
        Bạn có chắc muốn xóa phòng <strong>@Model.RoomNumber</strong> không?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Số phòng</dt>
        <dd class="col-sm-9">@Model.RoomNumber</dd>

        <dt class="col-sm-3">Giá thuê</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N0") đ</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>
