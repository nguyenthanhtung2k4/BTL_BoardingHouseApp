@model BoardingHouseApp.Models.Room

@{
    ViewData["Title"] = "Xóa phòng";
}

<h2>Xóa phòng</h2>

<div>
    <h4>Bạn có chắc muốn xóa phòng <strong>@Model.RoomNumber</strong> không?</h4>
    <dl class="row">
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("N0") VNĐ</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
