@model BoardingHouseApp.Models.Room
@{
    ViewData["Title"] = "Thêm phòng";
}
<div class="container py-4">
    <h2>Thêm phòng</h2>

    <!-- Hiển thị thông báo từ TempData -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label">Số phòng</label>
            <input asp-for="RoomNumber" class="form-control" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giá thuê</label>
            <input asp-for="Price" class="form-control" id="priceInput" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const priceInput = document.getElementById('priceInput');
            
            // Định dạng số tiền
            if (priceInput) {
                // Định dạng giá trị ban đầu nếu có
                if (priceInput.value) {
                    let initialValue = priceInput.value.replace(/\D/g, '');
                    if (initialValue) {
                        priceInput.value = parseInt(initialValue).toLocaleString('vi-VN');
                    }
                }
                
                priceInput.addEventListener('input', function (e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value) {
                        e.target.value = parseInt(value).toLocaleString('vi-VN');
                    } else {
                        e.target.value = '';
                    }
                });

                const form = document.querySelector('form');
                form.addEventListener('submit', function (e) {
                    let value = priceInput.value.replace(/\D/g, '');
                    priceInput.value = value;
                });
            }
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}