@model BoardingHouseApp.Models.Contracts

@{
    ViewData["Title"] = "Thêm Hợp Đồng Mới";
}

<h1>Thêm Hợp Đồng Mới</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TenantId" class="control-label">Người Thuê</label>
                <select asp-for="TenantId" class="form-control" asp-items="ViewBag.TenantId">
                    <option value="">-- Chọn Người Thuê --</option>
                </select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label">Phòng</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                    <option value="">-- Chọn Phòng --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Ngày Bắt Đầu</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">Ngày Kết Thúc</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo Hợp Đồng" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}