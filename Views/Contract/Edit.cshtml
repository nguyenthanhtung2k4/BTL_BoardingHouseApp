@model BoardingHouseApp.Models.Contracts

@{
    ViewData["Title"] = "Chỉnh Sửa Hợp Đồng";
}

<h1>Chỉnh Sửa Hợp Đồng</h1>

<h4>Hợp đồng số: @Model.Id</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" /> @* Giữ lại ngày tạo ban đầu *@

            <div class="form-group mb-3">
                <label asp-for="TenantId" class="control-label">Người Thuê</label>
                <select asp-for="TenantId" class="form-control" asp-items="ViewBag.TenantId">
                    <option value="">-- Chọn Người Thuê --</option>
                </select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label">Phòng</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                    <option value="">-- Chọn Phòng --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Ngày Bắt Đầu</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">Ngày Kết Thúc</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}