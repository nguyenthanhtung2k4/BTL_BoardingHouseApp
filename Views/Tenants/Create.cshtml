@model BoardingHouseApp.Models.Tenant
@{
    ViewData["Title"] = "Thêm người thuê";
}
<div class="container py-4">
    <h2>Thêm người thuê</h2>

    <form asp-action="Create" method="post" class="mt-3" id="createForm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Điện thoại</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" id="submitButton">
            <span id="submitText">Lưu</span>
            <span id="loadingSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            <span id="loadingText" class="d-none">Đang xử lý...</span>
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="d-none" style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,0.8);
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
">
    <div class="text-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
        <p class="mt-2">Đang xử lý và gửi email...</p>
        <small class="text-muted">Vui lòng không đóng trình duyệt</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('createForm');
            const submitButton = document.getElementById('submitButton');
            const submitText = document.getElementById('submitText');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const loadingText = document.getElementById('loadingText');
            const loadingOverlay = document.getElementById('loadingOverlay');

            form.addEventListener('submit', function(e) {
                // Hiển thị loading
                submitButton.disabled = true;
                submitText.classList.add('d-none');
                loadingSpinner.classList.remove('d-none');
                loadingText.classList.remove('d-none');
                loadingOverlay.classList.remove('d-none');

                // Đổi text và style của button
                submitButton.innerHTML = `
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Đang xử lý...
                `;
            });

            // Xử lý khi có lỗi validation (form không submit được)
            form.addEventListener('invalid', function() {
                // Ẩn loading nếu có lỗi validation
                submitButton.disabled = false;
                submitText.classList.remove('d-none');
                loadingSpinner.classList.add('d-none');
                loadingText.classList.add('d-none');
                loadingOverlay.classList.add('d-none');
                
                // Khôi phục button
                submitButton.innerHTML = '<span id="submitText">Lưu</span>';
            }, true);
        });
    </script>
}