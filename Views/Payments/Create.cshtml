@model BoardingHouseApp.Models.Payment

@{
    ViewData["Title"] = "Tạo Thanh Toán Mới";
}

<h2 class="mb-4 text-success">Tạo Thanh Toán & Hóa Đơn Mới</h2>

<div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <h4 class="text-secondary mb-3 border-bottom pb-2">1. Hợp đồng & Mô tả</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ContractId" class="form-label">Hợp Đồng Liên Quan</label>
                        <select asp-for="ContractId" class="form-select" asp-items="ViewBag.ContractId">
                            <option value="">-- Chọn Hợp Đồng --</option>
                        </select>
                        <span asp-validation-for="ContractId" class="text-danger"></span>
                        <small class="form-text text-muted">Chỉ hiển thị các hợp đồng đang có hiệu lực.</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Ví dụ: Tiền nhà tháng 10/2025, Tiền điện nước..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <h4 class="text-secondary mb-3 border-bottom pb-2 mt-4">2. Chi tiết Giao Dịch</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <input asp-for="Amount" class="form-control" type="number" step="1000" min="0" placeholder="Đơn vị: VNĐ" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentMethod" class="form-label"></label>
                        <select asp-for="PaymentMethod" class="form-select">
                            <option value="">-- Chọn Phương Thức --</option>
                            <option value="Tiền mặt">Tiền mặt</option>
                            <option value="Chuyển khoản">Chuyển khoản</option>
                            <option value="Hóa đơn/Chưa thanh toán">Hóa đơn/Chưa thanh toán</option>
                        </select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="0">0 - Chưa thanh toán (Tạo hóa đơn)</option>
                            <option value="1">1 - Đã thanh toán</option>
                            <option value="2">2 - Quá hạn</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                        <small class="form-text text-danger">Nếu chọn **Đã thanh toán**, bắt buộc phải nhập Ngày Thanh Toán Thực Tế.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        <small class="form-text text-muted">Ngày thanh toán thực tế. Để trống nếu là hóa đơn.</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle-fill"></i> Quay lại Danh sách
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save-fill"></i> Lưu Thanh toán
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}