@model IEnumerable<BoardingHouseApp.Models.Contracts>

@{
    ViewData["Title"] = "Quản lý Hợp đồng";
}

<h2 class="mb-4 text-primary">Danh sách Hợp đồng</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Tạo Hợp đồng Mới
    </a>
</p>

@* Hiển thị thông báo thành công (nếu có) từ TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Thành công!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>
                            Phòng
                        </th>
                        <th>
                            Người thuê
                        </th>
                        <th>
                            Ngày bắt đầu
                        </th>
                        <th>
                            Ngày kết thúc
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.Room.RoomNumber)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenant.FullName)
                            </td>
                            <td>
                                @* Định dạng ngày tháng ngắn gọn *@
                                @item.StartDate.ToShortDateString()
                            </td>
                            <td>
                                @item.EndDate.ToShortDateString()
                            </td>
                            <td>
                                @{
                                    var statusClass = item.IsActive ? "bg-success" : "bg-secondary";
                                    var statusText = item.IsActive ? "Đang hiệu lực" : "Đã kết thúc" ;
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Sửa">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                        <i class="bi bi-info-circle-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                Chưa có hợp đồng nào được tạo. Hãy <a asp-action="Create">tạo hợp đồng mới</a>!
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* Thêm thư viện icon Bootstrap nếu chưa có trong Layout chính *@
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> *@
}
