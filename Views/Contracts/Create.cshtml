@model BoardingHouseApp.Models.Contracts

@{
    ViewData["Title"] = "Tạo Hợp đồng Mới";
}

<h2 class="mb-4 text-primary">Tạo Hợp đồng Mới</h2>

<div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                @* Cột 1 *@
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="RoomId" class="form-label">Phòng Thuê</label>
                        @* Sử dụng ViewData["RoomId"] đã được Controller chuẩn bị *@
                        <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId">
                            <option value="">-- Chọn Phòng --</option>
                        </select>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenantId" class="form-label">Người Thuê</label>
                        @* Sử dụng ViewData["TenantId"] đã được Controller chuẩn bị *@
                        <select asp-for="TenantId" class="form-select" asp-items="ViewBag.TenantId">
                            <option value="">-- Chọn Người Thuê --</option>
                        </select>
                        <span asp-validation-for="TenantId" class="text-danger"></span>
                    </div>
                </div>

                @* Cột 2 *@
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label">Ngày Bắt Đầu</label>
                        @* Thêm type="date" để hiển thị Date Picker *@
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label">Ngày Kết Thúc</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">
                            @Html.DisplayNameFor(model => model.IsActive) (Hợp đồng đang có hiệu lực)
                        </label>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle-fill"></i> Quay lại Danh sách
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save-fill"></i> Lưu Hợp đồng
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* Kích hoạt client-side validation *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}