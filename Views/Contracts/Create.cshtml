@model BoardingHouseApp.Models.ViewModels.ContractCreationViewModel

@{
    ViewData["Title"] = "Tạo Hợp đồng Mới";
}

<h2 class="mb-4 text-primary">Tạo Hợp đồng và Thanh toán Ban đầu</h2>

<div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            @* === PHẦN 1: THÔNG TIN HỢP ĐỒNG === *@
            <h4 class="text-secondary mb-3 border-bottom pb-2">1. Thông tin Hợp đồng</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="RoomId" class="form-label"></label>
                        <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId">
                            <option value="">-- Chọn Phòng --</option>
                        </select>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenantId" class="form-label"></label>
                        <select asp-for="TenantId" class="form-select" asp-items="ViewBag.TenantId">
                            <option value="">-- Chọn Người Thuê --</option>
                        </select>
                        <span asp-validation-for="TenantId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive"></label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            @* === PHẦN 2: THANH TOÁN BAN ĐẦU === *@
            <h4 class="text-secondary mb-3 border-bottom pb-2">2. Thanh toán Ban đầu (Cọc/Tháng đầu)</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="InitialAmount" class="form-label"></label>
                        <input asp-for="InitialAmount" type="number" step="any" class="form-control" />
                        <span asp-validation-for="InitialAmount" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InitialDescription" class="form-label"></label>
                        <input asp-for="InitialDescription" class="form-control" />
                        <span asp-validation-for="InitialDescription" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="InitialPaymentMethod" class="form-label"></label>
                        <select asp-for="InitialPaymentMethod" class="form-select">
                            <option value="">-- Chọn Phương Thức --</option>
                            <option value="Tiền mặt">Tiền mặt</option>
                            <option value="Chuyển khoản">Chuyển khoản</option>
                            <option value="Hóa đơn/Chưa thanh toán">Hóa đơn/Chưa thanh toán</option>
                        </select>
                        <span asp-validation-for="InitialPaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InitialPaymentDate" class="form-label"></label>
                        <input asp-for="InitialPaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="InitialPaymentDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
                <button type="submit" class="btn btn-primary">Lưu Hợp đồng & Thanh toán</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}