@model BoardingHouseApp.Models.Contracts

@{
    ViewData["Title"] = "Chi tiết Hợp đồng " + Model.Id;
}

@* HIỂN THỊ THÔNG BÁO LỖI (NẾU CÓ) *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Lỗi!</strong> @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="mb-4 text-info">Chi tiết Hợp đồng: ID_@Model.Id</h2>

<div class="card shadow-lg mb-5">
    <div class="card-header bg-info text-white">
        <h5 class="my-0">Thông tin chung</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Phòng thuê</dt>
            <dd class="col-sm-9">
                @* Hiển thị số phòng *@
                <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Room.RoomNumber)</span>
            </dd>

            <dt class="col-sm-3">Người thuê</dt>
            <dd class="col-sm-9">
                @* Giả định Tenant có FullName *@
                <a asp-controller="Tenants" asp-action="Details" asp-route-id="@Model.TenantId" class="text-decoration-none">
                    @Html.DisplayFor(model => model.Tenant.FullName)
                </a>
            </dd>

            <dt class="col-sm-3">Ngày bắt đầu</dt>
            <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Ngày kết thúc</dt>
            <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                @{
                    var statusClass = Model.IsActive ? "bg-success" : "bg-secondary";
                    var statusText = Model.IsActive ? "Đang hiệu lực" : "Đã kết thúc";
                }
                <span class="badge @statusClass">@statusText</span>
            </dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

            @if (Model.UpdatedAt.HasValue)
            {
                <dt class="col-sm-3">Ngày cập nhật</dt>
                <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
            }
        </dl>
    </div>
</div>

@* PHẦN THANH TOÁN (PAYMENTS) *@
@if (Model.Payments != null && Model.Payments.Any())
{
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-dark text-white">
            <h5 class="my-0">Lịch sử Thanh toán (@Model.Payments.Count())</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ngày thanh toán</th>
                            <th>Số tiền</th>
                            <th>Phương thức</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToShortDateString()</td>
                                <td><span class="text-success fw-bold">@payment.Amount.ToString("N0") VNĐ</span></td>
                                <td>@payment.PaymentMethod</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-4">Chưa có giao dịch thanh toán nào được ghi nhận cho hợp đồng này.</div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
        <i class="bi bi-pencil-fill"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle-fill"></i> Quay lại Danh sách
    </a>
</div>