@model BoardingHouseApp.Models.Room
@{
    ViewData["Title"] = "Sửa phòng";  <!-- Đã sửa từ "Thêm phòng" -->
}
<div class="container py-4">
    <h2>Sửa phòng</h2>  <!-- Đã sửa từ "Thêm phòng" -->

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="RoomId" />
        
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label">Số phòng</label>
            <input asp-for="RoomNumber" class="form-control" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giá thuê</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select asp-for="Status" class="form-select">
                <option value="">-- Chọn trạng thái --</option>
                <option value="0">Trống</option>
                <option value="1">Đang thuê</option>
                <option value="2">Bảo trì</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>  <!-- Có thể đổi từ "Lưu" -->
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}